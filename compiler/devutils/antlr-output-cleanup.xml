<?xml version="1.0" encoding="UTF-8"?>
<!-- ====================================================================== 
     BSJ ANTLR Parser Cleanup
         
     Modifies the ANTLR parser sources generated by ANTLR to eliminate warnings
     caused by ANTLR's generated code.
                   
     Zachary Palmer                                                                
     ====================================================================== -->
<project name="BSJ ANTLR Parser Cleanup" default="do-cleanup">
	<description>
            The ANTLR parser used by the BSJ compiler.
    </description>

	<!-- Names the source folder containing generated files. -->
	<property name="src" value="src" />

	<!-- - - - - - - - - - - - - - - - - - 
          target: do-cleanup                      
         - - - - - - - - - - - - - - - - - -->
	<target name="do-cleanup" description="Cleans up the generated code.">
        <replaceregexp byline="true">
            <regexp pattern="^public class ANTLRv3" />
            <substitution expression="@javax.annotation.Generated(&quot;org.antlr.Tool&quot;) @SuppressWarnings(&quot;unused&quot;) public class ANTLRv3" />
            <fileset dir="${src}">
                <include name="**/ANTLRv3Lexer.java" />
            </fileset>
        </replaceregexp>
        <replaceregexp byline="true">
            <regexp pattern="^public class ANTLRv3" />
            <substitution expression="@javax.annotation.Generated(&quot;org.antlr.Tool&quot;) @SuppressWarnings({&quot;unchecked&quot;,&quot;unused&quot;,&quot;rawtypes&quot;}) public class ANTLRv3" />
            <fileset dir="${src}">
                <include name="**/ANTLRv3Parser.java" />
            </fileset>
        </replaceregexp>
	</target>
</project>
