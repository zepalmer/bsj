public class ObservableMain
{
	public static void main(String[] arg)
	{
	    ObservableClass oc = new ObservableClass();
	    Listener l = new Listener();
	    oc.addMyListener(l);
	    oc.fireMyEvent(new MyEvent(7));	 
	    oc.removeMyListener(l);
	    oc.fireMyEvent(new MyEvent(6));    
	}
	
	public static class Listener implements MyListener
	{
	    public void myEventOccurred(MyEvent event)
	    {
	        System.out.println("Got event: " + event.toString());	        
	    }	    
	}
}